{
  "name": "@kiwicom/orbit",
  "private": true,
  "scripts": {
    "nx": "nx",
    "build-ci": "pnpm size:build",
    "checks": "zx scripts/checks.mjs",
    "check:types": "pnpm checks --types",
    "check:links": "pnpm checks --links",
    "check:statuses": "pnpm checks --statuses",
    "dev:test": "cross-env NODE_ENV=loki pnpm dev",
    "dev": "pnpm nx storybook @kiwicom/orbit-components",
    "eslint:ci": "eslint-config-prettier index.js index.ts && eslint . --report-unused-disable-directives",
    "eslint:docs": "eslint --fix docs/src/documentation --report-unused-disable-directives",
    "orbit-kiwi:build": "pnpm && pnpm tokens build && pnpm components build && pnpm docs build",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "prettier:test": "prettier --check '**/*.md'",
    "publish-packages": "zx scripts/publish.mjs",
    "size:build": "pnpm size:build @kiwicom/orbit-design-tokens && pnpm size:build @kiwicom/orbit-components",
    "size": "pnpm size:build && size-limit",
    "test-ci": "nx affected --target=test --parallel=5 --runInBand",
    "test:all": "nx run-many --target=test --all",
    "test:affected": "nx affected --target=test",
    "update-supported-browsers": "markdown --path .github/contribution/testing-conventions.md && git add .github/contribution/testing-conventions.md"
  },
  "author": "kiwi.com",
  "license": "MIT",
  "devDependencies": {
    "@adeira/babel-preset-adeira": "^4.0.0",
